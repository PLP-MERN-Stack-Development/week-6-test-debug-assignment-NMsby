{
  "name": "week-6-test-debug-assignment-nmsby",
  "version": "1.0.0",
  "description": "Week 6: Testing and Debugging â€“ Ensuring MERN App Reliability",
  "main": "index.js",
  "scripts": {
    "install-client": "cd client && npm install",
    "install-server": "cd server && npm install",
    "install-all": "npm run install-client && npm run install-server",

    "test": "jest --passWithNoTests",
    "test:unit": "jest --selectProjects client server --testPathPattern=unit --passWithNoTests",
    "test:integration": "jest --selectProjects client server --testPathPattern=integration --passWithNoTests",
    "test:e2e": "cd client && npm run test:e2e",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests",

    "test:server": "jest --selectProjects server --passWithNoTests",
    "test:server:unit": "jest --selectProjects server --testPathPattern=unit --passWithNoTests",
    "test:server:integration": "jest --selectProjects server --testPathPattern=integration --passWithNoTests",
    "test:server:watch": "jest --selectProjects server --watch --passWithNoTests",

    "test:client": "jest --selectProjects client --passWithNoTests",
    "test:client:unit": "jest --selectProjects client --testPathPattern=unit --passWithNoTests",
    "test:client:integration": "jest --selectProjects client --testPathPattern=integration --passWithNoTests",
    "test:client:watch": "jest --selectProjects client --watch --passWithNoTests",

    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:quick": "jest --selectProjects client server --testPathPattern='(unit|integration)' --maxWorkers=50% --passWithNoTests",

    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "start": "cd server && npm start",
    "build": "cd client && npm run build",
    "setup-test-db": "cd server && npm run setup-test-db",

    "lint": "concurrently \"npm run lint:client\" \"npm run lint:server\"",
    "lint:client": "cd client && npm run lint",
    "lint:server": "cd server && npm run lint",
    "lint:fix": "concurrently \"npm run lint:client -- --fix\" \"npm run lint:server -- --fix\"",
    "coverage:merge": "nyc merge coverage .nyc_output/coverage.json",
    "coverage:report": "nyc report --reporter=html --reporter=text --reporter=lcov",
    "coverage:check": "nyc check-coverage --statements 70 --branches 60 --functions 70 --lines 70"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PLP-MERN-Stack-Development/week-6-test-debug-assignment-NMsby.git"
  },
  "private": true,
  "keywords": [
    "mern",
    "testing",
    "jest",
    "react",
    "express",
    "mongodb"
  ],
  "author": "Nelson Masbayi",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-react": "^7.23.3",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nyc": "^15.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
